{
  "vim_mode": true,
  "relative_line_numbers": true,
  "buffer_font_size": 12,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_features": {
    "calt": false
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Github Dark Colorblind"
  },
  "project_panel": {
    "dock": "right",
    "auto_fold_dirs": false
  },
  "features": {
    "inline_completion_provider": "supermaven"
  },
  "assistant": {
    "default_model": {
      "provider": "deepseek",
      "model": "deepseek-chat"
    },
    "version": "2"
  },
  // Disable Biome for now, cause I use ESlint in most of my projects for now :(
  // "formatter": {
  //   "language_server": {
  //     "name": "biome"
  //   }
  // },
  "lsp": {
    "biome": {
      "settings": {
        "require_config_file": true
      }
    }
  },
  // "code_actions_on_format": {
  //   "source.fixAll.biome": true,
  //   "source.organizeImports.biome": true
  // },
  "formatter": {
    "code_actions": {
      "source.fixAll.eslint": true
    }
  }
}
