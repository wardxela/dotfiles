{
  /* Basic */
  "vim_mode": true,
  "confirm_quit": true,

  /* UI */
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 14,
  "buffer_font_features": { "calt": false },
  "ui_font_family": "JetBrainsMono Nerd Font",
  "ui_font_features": { "calt": false },
  "icon_theme": "Colored Zed Icons Theme Dark",
  "theme": {
    "mode": "system",
    "light": "Github Light",
    "dark": "Github Dark"
  },
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "history"
  },
  "project_panel": {
    "dock": "right",
    "auto_fold_dirs": false,
    "default_width": 360
  },
  "git_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "dock": "right",
    "default_width": 360
  },
  "outline_panel": {
    "default_width": 360,
    "dock": "right"
  },
  "notification_panel": {
    "default_width": 360
  },
  "terminal": {
    "default_height": 450
  },

  /* Extensions */
  "auto_install_extensions": {
    // "biome": true,
    "codebook": true,
    "colored-zed-icons-theme": true,
    "docker-compose": true,
    "dockerfile": true,
    "emmet": true,
    "env": true,
    "fish": true,
    "git-firefly": true,
    "github-theme": true,
    "html": true,
    "lua": true,
    "nix": true,
    "toml": true
  },

  /* Languages, Formatting, Linting, etc. */
  "languages": {
    "JavaScript": {
      "formatter": {
        // "language_server": {
        //   "name": "biome"
        // }
        "code_actions": {
          "source.fixAll.eslint": true
        }
      },
      "code_actions_on_format": {
        "source.fixAll.biome": true
      }
    },
    "TypeScript": {
      "formatter": {
        // "language_server": {
        //   "name": "biome"
        // }
        "code_actions": {
          "source.fixAll.eslint": true
        }
      },
      "code_actions_on_format": {
        "source.fixAll.biome": true
      }
    },
    "TSX": {
      "formatter": {
        // "language_server": {
        //   "name": "biome"
        // }
        "code_actions": {
          "source.fixAll.eslint": true
        }
      },
      "code_actions_on_format": {
        "source.fixAll.biome": true
      }
    },
    // "JSON": {
    //   "formatter": {
    //     "language_server": {
    //       "name": "biome"
    //     }
    //   },
    //   "code_actions_on_format": {
    //     "source.fixAll.biome": true
    //   }
    // },
    "Nix": {
      "formatter": {
        "external": {
          "command": "nixfmt"
        }
      }
    }
  },

  /* AI */
  "features": {
    "edit_prediction_provider": "zed"
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },

  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
